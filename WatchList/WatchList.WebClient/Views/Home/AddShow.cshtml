@using WatchList.Logic.Models;
@using WatchList.Logic.Database;

@model WatchList.WebClient.Models.AddShowModel


@{

    ViewBag.Title = "Status Select";

}

@using (Html.BeginForm("AddShow", "Home")) {

    <fieldset>
            
            <label>Name: </label>
            @Html.TextBox("Name", "")  <br/>


            <label># of Seasons: </label>
            <input type="number" id="SeasonAmt" name="SeasonAmt" value="0" />  <br/>


            <label>Status: </label>
            @Html.DropDownList("StatusType")  <br/>

        <p>

            <input type="submit" value="Submit" />

        </p>

    </fieldset>

}







